<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat Room | ThanaDev</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link rel="stylesheet" href="/css/sidebar.css" />
    <link rel="stylesheet" href="/css/messages.css" />
  </head>

  <body>
    <div class="container">
      <aside>
        <div class="top">
          <div class="logo">
            <h2>Thana<span class="danger">Dev</span></h2>
          </div>
          <div class="close" id="close-btn">
            <span class="material-symbols-sharp">close </span>
          </div>
        </div>
        <div class="sidebar">
          <a href="/">
            <span class="material-symbols-sharp">dashboard_customize</span>
            <h3>Dashboard</h3>
          </a>
          <a href="/users">
            <span class="material-symbols-sharp">group</span>
            <h3>Users</h3>
          </a>
          <a href="/orders">
            <span class="material-symbols-sharp">receipt_long</span>
            <h3>Orders</h3>
          </a>
          <a href="#" class="active">
            <span class="material-symbols-sharp">mail_outline</span>
            <h3>Messages</h3>
          </a>
          <a href="/login"> </a>
        </div>
      </aside>

      <!-- end of aside --->

      <main>
        <div class="recent-orders">
          <div class="first">
            <div class="first-header">
              <form action="#">
                <div><span class="material-symbols-sharp">search</span></div>
                <input
                  type="search"
                  name="search"
                  id="search"
                  placeholder="Search for Name or Email..."
                />
              </form>
            </div>
            <div class="chat-list">
              <div class="first-body-1">
                <!-- <div class="profile-photo">
                  <img src="img/avatar-1.jpeg" alt="" />
                </div> -->
                <div class="text">
                  <div class="first-line">
                    <a href=""><h3>Diart Derguti</h3></a>
                  </div>
                  <div class="right-side-chat">
                    <p>diart@gmail.com</p>
                  </div>
                </div>
              </div>

              <div class="first-body-1">
                <!-- <div class="profile-photo">
                  <img src="img/avatar-1.jpeg" alt="" />
                </div> -->
                <div class="text">
                  <div class="first-line">
                    <a href=""><h3>Nyo Berisha</h3></a>
                  </div>
                  <div class="right-side-chat">
                    <p>nyo0ber@gmail.com</p>
                  </div>
                </div>
              </div>

              <div class="first-body-1">
                <!-- <div class="profile-photo">
                  <img src="img/avatar-1.jpeg" alt="" />
                </div> -->
                <div class="text">
                  <div class="first-line">
                    <a href=""><h3>Adon Asdon</h3></a>
                  </div>
                  <div class="right-side-chat">
                    <p>adonasdon@gmail.com</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="second">
            <div class="second-header">
              <div class="profile-photo">
                <img src="img/avatar-1.jpeg" alt="" />
              </div>
              <div class="chatter-name">USER USER USER</div>
              <div>
                <a href="#"
                  ><span class="material-symbols-sharp">more_horiz</span></a
                >
              </div>
            </div>
            <hr />

            <div class="second-body">
              <div class="second-body-up" id="chat-room"></div>

              <div class="second-down">
                <hr />

                <div class="down-send">
                  <div class="down-button">
                    <form id="chat-form">
                      <input
                        id="msg"
                        type="text"
                        name="Mesazhi"
                        autocomplete="off"
                        placeholder="Write a Message..."
                        required
                      />
                      <button
                        class="btn"
                        type="submit"
                        name="dergo"
                        value="dergo"
                      >
                        Send
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>

      <!--end of main-->

      <div class="right">
        <div class="top">
          <a href="/auth/logout"
            ><span class="material-symbols-sharp" id="logout">logout</span></a
          >

          <button id="menu-btn">
            <span class="material-symbols-sharp">menu</span>
          </button>
          <div class="theme-toggler">
            <span class="material-symbols-sharp active">light_mode</span>
            <span class="material-symbols-sharp">dark_mode</span>
          </div>
          <div class="profile">
            <div class="info">
              <p>Hey, <b><%= user.name %></b>!</p>
              <small class="text-muted"><%= user.role %></small>
            </div>
            <div class="profile-photo">
              <img src="img/me.jpg" alt="" />
            </div>
          </div>
        </div>
        <!--end of the top-->
      </div>
    </div>

    <script src="js/main.js"></script>
    <script>
      var element = document.getElementById('second-body-up');
      element.scrollTop = element.scrollHeight;
    </script>
    <script>
      var goToSecondPage = document.getElementById('logout');
      goToSecondPage.addEventListener('click', function () {
        document.location.href = 'login.html';
      });
    </script>
  </body>
</html>
