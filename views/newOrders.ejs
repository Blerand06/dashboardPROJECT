<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard | ThanaDev</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link rel="stylesheet" href="css/sidebar.css" />
    <link rel="stylesheet" href="css/porositereja.css" />
  </head>

  <body>
    <div class="container">
      <aside>
        <div class="top">
          <div class="logo">
            <h2>Thana<span class="danger">Dev</span></h2>
          </div>
          <div class="close" id="close-btn">
            <span class="material-symbols-sharp">close </span>
          </div>
        </div>
        <div class="sidebar">
          <a href="/">
            <span class="material-symbols-sharp">dashboard_customize</span>
            <h3>Dashboard</h3>
          </a>
          <a href="/users">
            <span class="material-symbols-sharp">group</span>
            <h3>Users</h3>
          </a>
          <a href="/orders">
            <span class="material-symbols-sharp">receipt_long</span>
            <h3>Orders</h3>
          </a>
          <a href="/messages">
            <span class="material-symbols-sharp">mail_outline</span>
            <h3>Messages</h3>
          </a>
          <a href="/login">
            <span class="material-symbols-sharp">logout</span>
            <h3>Logout</h3>
          </a>
        </div>
      </aside>

      <!-- end of aside --->

      <main>
        <div class="containers">
          <header>New Order</header>

          <form action="/order/add-order" method="post" id="orderForm">
            <div class="form first">
              <div class="details personal">
                <div class="fields">
                  <div class="input-field">
                    <label>Order Name</label>
                    <input
                      type="text"
                      placeholder="Order Name"
                      required
                      name="name"
                      id="name"
                    />
                  </div>
                  <div class="input-field">
                    <label>Description</label>
                    <input
                      type="text"
                      placeholder="Description"
                      required
                      name="description"
                      id="description"
                    />
                  </div>
                  <div class="input-field">
                    <label>Price</label>
                    <input
                      type="number"
                      placeholder="Price"
                      name="price"
                      required
                      id="price"
                    />
                  </div>

                  <div class="input-field">
                    <label>Reciever Name</label>
                    <input
                      type="text"
                      placeholder="Reciever Name"
                      required
                      name="owner"
                      id="owner"
                    />
                  </div>

                  <div class="input-field">
                    <label>Address</label>
                    <input
                      type="text"
                      name="address"
                      placeholder="Address"
                      required
                      id="address"
                    />
                  </div>
                  <div class="input-field">
                    <label>Reciever Phone Number</label>
                    <input
                      type="tel"
                      name="phone"
                      placeholder="Reciever Phone Number"
                      required
                      id="phone"
                    />
                  </div>
                  <div class="input-field">
                    <label>Offers</label>
                    <select required name="offer" id="offer">
                      <option>Offer 1</option>
                      <option>Offer 2</option>
                      <option>Offer 3</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="details ID">
                <button class="nextBtn" id="saveButton">
                  <a href="/order/add-order"
                    ><span class="btnText">Send</span></a
                  >
                  <i class="uil uil-navigator"></i>
                </button>
              </div>
            </div>
          </form>
        </div>
      </main>

      <!--end of main-->
      <div class="right">
        <div class="top"><a href="/auth/logout"><span class="material-symbols-sharp" id="logout">logout</span></a>      
          <button id="menu-btn">
            <span class="material-symbols-sharp">menu</span>
          </button>
          <div class="theme-toggler">
            <span class="material-symbols-sharp active">light_mode</span>
            <span class="material-symbols-sharp">dark_mode</span>
          </div>
          <div class="profile">
            <div class="info">
              <p>Hey, <b><%= user.name %></b>!</p>
              <small class="text-muted"><%= user.role %></small>
            </div>
            <div class="profile-photo">
              <img src="img/avatar-1.jpeg" alt="" />
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="js/order-list.js"></script>
    <script src="js/main.js"></script>
    <script>
      var goToSecondPage = document.getElementById("logout");
      const orderForm = document.getElementById("orderForm");
      goToSecondPage.addEventListener("click", function () {
        document.location.href = "login.html";
      });
      document.getElementById("saveButton").addEventListener("click", () => {
        window.location.href = "/orders";
      });

      // Preventing Page Reload
      orderForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        const name = document.getElementById("name").value;
        const description = document.getElementById("description").value;
        const price = document.getElementById("price").value;
        const owner = document.getElementById("owner").value;
        const address = document.getElementById("address").value;
        const phone = document.getElementById("phone").value;
        const offer = document.getElementById("offer").value;

        const res = await fetch("/order/add-order", {
          method: "POST",
          body: JSON.stringify({
            name,
            description,
            price,
            owner,
            address,
            phone,
            offer,
          }),
          headers: {
            "Content-Type": "application/json",
          },
        });
        const data = await res.json();
      });
    </script>
  </body>
</html>
