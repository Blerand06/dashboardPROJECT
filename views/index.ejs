<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard | ThanaDev</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link rel="stylesheet" href="css/sidebar.css" />
    <link rel="stylesheet" href="css/style.css" />
  </head>

  <body>
    <div class="container">
      <aside>
        <div class="top">
          <div class="logo">
            <h2>Thana<span class="danger">Dev</span></h2>
          </div>
          <div class="close" id="close-btn">
            <span class="material-symbols-sharp">Logout</span>
          </div>
        </div>
        <div class="sidebar">
          <a href="#" class="active">
            <span class="material-symbols-sharp">dashboard_customize</span>
            <h3>Dashboard</h3>
          </a>
          <a href="/users">
            <span class="material-symbols-sharp">group</span>
            <h3>Users</h3>
          </a>
          <a href="/orders">
            <span class="material-symbols-sharp">receipt_long</span>
            <h3>Orders</h3>
          </a>
          <a href="./messages">
            <span class="material-symbols-sharp">mail_outline</span>
            <h3>Messages</h3>
            <span class="message-count">26</span>
          </a>
          <a href="/login"> </a>
        </div>
      </aside>

      <!-- end of aside --->

      <main>
        <h1>Dashboard</h1>
        <div class="date">
          <input type="date" />
        </div>

        <div class="insights">
          <div class="sales">
            <span class="material-symbols-sharp"> receipt </span>
            <div class="middle">
              <div class="left">
                <h3>Total Sales</h3>
                <h1>14053.28$</h1>
              </div>
              <div class="progress">
                <svg>
                  <circle cx="38" cy="38" r="36"></circle>
                </svg>
                <div class="number">
                  <p>81%</p>
                </div>
              </div>
            </div>
            <small class="text-muted">Last 24 hours</small>
          </div>

          <!--End of sales-->

          <div class="expenses">
            <span class="material-symbols-sharp"> grouped_bar_chart </span>
            <div class="middle">
              <div class="left">
                <h3>Total Expenses</h3>
                <h1>9563.44$</h1>
              </div>
              <div class="progress">
                <svg>
                  <circle cx="38" cy="38" r="36"></circle>
                </svg>
                <div class="number">
                  <p>62%</p>
                </div>
              </div>
            </div>
            <small class="text-muted">Last 24 hours</small>
          </div>

          <!--End of expenses-->

          <div class="income">
            <span class="material-symbols-sharp"> stacked_line_chart </span>
            <div class="middle">
              <div class="left">
                <h3>Total Profit</h3>
                <h1>4489.84$</h1>
              </div>
              <div class="progress">
                <svg>
                  <circle cx="38" cy="38" r="36"></circle>
                </svg>
                <div class="number">
                  <p>44%</p>
                </div>
              </div>
            </div>
            <small class="text-muted">Last 24 hours</small>
          </div>
          <!--End of income-->
        </div>
        <!--end of insight-->

        <div class="recent-orders">
          <h2>Last Orders</h2>
          <table>
            <thead>
              <tr>
                <th>Product Number</th>
                <th>Product Name</th>
                <th>Payment</th>
                <th>Status</th>
                <th>Options</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <!-- <tr>
                            <td>Iphone 13 Pro Max</td>
                            <td>097733</td>
                            <td>Due</td>
                            <td class="warning">Pending</td>
                            <td class="primary">Details</td>
                        </tr> -->
            </tbody>
          </table>
          <a href="#">Show All</a>
        </div>
      </main>

      <!--end of main-->

      <div class="right">
        <div class="top">
          <a href="/auth/logout"
            ><span class="material-symbols-sharp" id="logout">Logout</span></a
          >
          <button id="menu-btn">
            <span class="material-symbols-sharp">menu</span>
          </button>
          <div class="theme-toggler">
            <span class="material-symbols-sharp active">light_mode</span>
            <span class="material-symbols-sharp">dark_mode</span>
          </div>
          <div class="profile">
            <div class="info">
              <p>Hey, <b><%= user.name %></b>!</p>
              <small class="text-muted"><%= user.role %></small>
            </div>
            <div class="profile-photo">
              <img src="img/avatar-1.jpeg" alt="" />
            </div>
          </div>
        </div>
        <!--end of the top-->
        <div class="recent-updates">
          <h2>Latest News</h2>
          <div class="updates">
            <div class="update">
              <div class="profile-photo">
                <img src="img/profile-1.jpg " alt="" />
              </div>
              <div class="message">
                <p><b>Driton Sallahu</b> took his order, IPhone 13 Pro Max</p>
                <small class="text-muted">1 hour ago</small>
              </div>
            </div>
            <div class="update">
              <div class="profile-photo">
                <img src="img/profile-2.jpg" alt="" />
              </div>
              <div class="message">
                <p><b>Pietro Pannuci</b> took his order, IPhone 12</p>
                <small class="text-muted">2 hours ago</small>
              </div>
            </div>
            <div class="update">
              <div class="profile-photo">
                <img src="img/avatar-1.jpeg " alt="" />
              </div>
              <div class="message">
                <p><b>Diart Derguti</b> took his order, IPhone X</p>
                <small class="text-muted">5 hours ago</small>
              </div>
            </div>
          </div>
        </div>
        <!--end of recent updates-->
        <div class="sales-analytics">
          <h2>Selling Analysis</h2>
          <div class="item online">
            <div class="icon">
              <span class="material-symbols-sharp">shopping_cart</span>
            </div>
            <div class="right">
              <div class="info">
                <h3>Online Orders</h3>
                <small class="text-muted">Last 24 hours</small>
              </div>
              <h5 class="success">+40%</h5>
              <h3>3849</h3>
            </div>
          </div>

          <div class="item offline">
            <div class="icon">
              <span class="material-symbols-sharp">local_mall</span>
            </div>
            <div class="right">
              <div class="info">
                <h3>On-site Orders</h3>
                <small class="text-muted">Last 24 hours</small>
              </div>
              <h5 class="danger">-15%</h5>
              <h3>1100</h3>
            </div>
          </div>

          <div class="item custumers">
            <div class="icon">
              <span class="material-symbols-sharp">person</span>
            </div>
            <div class="right">
              <div class="info">
                <h3>New Clients</h3>
                <small class="text-muted">Last 24 hours</small>
              </div>
              <h5 class="success">+25%</h5>
              <h3>850</h3>
            </div>
          </div>
          <div class="item add-product">
            <div>
              <span class="material-symbols-sharp">add</span>
              <h3>Add Products</h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="js/main.js"></script>
    <script src="js/order-list.js"></script>

    <script>
      var goToSecondPage = document.getElementById("logout");
      goToSecondPage.addEventListener("click", function () {
        document.location.href = "login.html";
      });
    </script>
  </body>
</html>
