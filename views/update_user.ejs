<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard | ThanaDev</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link rel="stylesheet" href="css/sidebar.css" />
    <link rel="stylesheet" href="css/porositereja.css" />
  </head>

  <body>
    <div class="container">
      <aside>
        <div class="top">
          <div class="logo">
            <h2>Thana<span class="danger">Dev</span></h2>
          </div>
          <div class="close" id="close-btn">
            <span class="material-symbols-sharp">close </span>
          </div>
        </div>
        <div class="sidebar">
          <a href="/">
            <span class="material-symbols-sharp">dashboard_customize</span>
            <h3>Dashboard</h3>
          </a>
          <a href="/users">
            <span class="material-symbols-sharp">group</span>
            <h3>Users</h3>
          </a>
          <a href="/orders">
            <span class="material-symbols-sharp">receipt_long</span>
            <h3>Orders</h3>
          </a>
          <a href="/messages">
            <span class="material-symbols-sharp">mail_outline</span>
            <h3>Messages</h3>
          </a>
          <a href="/logout">
            <span class="material-symbols-sharp">logout</span>
            <h3>Logout</h3>
          </a>
        </div>
      </aside>

      <!-- end of aside --->

      <main>
        <div class="containers">
          <header>New User</header>

          <form
            action="/userlist/update-user/:id"
            method="put"
            id="userlistForm"
          >
            <div class="form first">
              <div class="details personal">
                <div class="fields">
                  <div class="input-field">
                    <label>Name Surname </label>
                    <input
                      type="text"
                      placeholder="Name Surname"
                      required
                      name="name"
                      id="name"
                    />
                  </div>
                  <div class="input-field">
                    <label>Username</label>
                    <input
                      type="text"
                      placeholder="Username"
                      required
                      name="username"
                      id="username"
                    />
                  </div>
                  <div class="input-field">
                    <label>Email</label>
                    <input
                      type="email"
                      placeholder="Email"
                      required
                      name="email"
                      id="email"
                    />
                  </div>
                  <div class="input-field">
                    <label>Phone Number</label>
                    <input
                      type="text"
                      placeholder="Phone Number"
                      required
                      name="phone"
                      id="phone"
                    />
                  </div>
                  <div class="input-field">
                    <label>Education</label>
                    <input
                      type="text"
                      placeholder="Education"
                      required
                      name="education"
                      id="education"
                    />
                  </div>
                  <div class="input-field">
                    <label>Address</label>
                    <input
                      type="text"
                      placeholder="Address"
                      required
                      name="address"
                      id="address"
                    />
                  </div>
                </div>
              </div>

              <div class="details ID">
                <button class="nextBtn" id="saveButton">
                  <a href="/userlist/update-user/:id"
                    ><span class="btnText">Save</span></a
                  >
                  <i class="uil uil-navigator"></i>
                </button>
              </div>
            </div>
          </form>
        </div>
      </main>

      <!--end of main-->
      <div class="right">
        <div class="top">
          <span class="material-symbols-sharp" id="logout">logout</span>
          <button id="menu-btn">
            <span class="material-symbols-sharp">menu</span>
          </button>
          <div class="theme-toggler">
            <span class="material-symbols-sharp active">light_mode</span>
            <span class="material-symbols-sharp">dark_mode</span>
          </div>
          <div class="profile">
            <div class="info">
              <p>Hey, <b><%= user.name %></b>!</p>
              <small class="text-muted"><%= user.role %></small>
            </div>
            <div class="profile-photo">
              <img src="img/avatar-1.jpeg" alt="" />
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="js/main.js"></script>
    <script src="js/user.js"></script>
    <script>
      var goToSecondPage = document.getElementById("logout");
      const userlistForm = document.getElementById("userlistForm");
      goToSecondPage.addEventListener("click", function () {
        document.location.href = "login.html";
      });
      document.getElementById("saveButton").addEventListener("click", () => {
        window.location.href = "/users";
      });

      // Preventing Page Reload
      userlistForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        const name = document.getElementById("name").value;

        const username = document.getElementById("username").value;
        const email = document.getElementById("email").value;
        const phone = document.getElementById("phone").value;
        const education = document.getElementById("education").value;
        const address = document.getElementById("address").value;

        const res = await fetch("/userlist/update-user/:id", {
          method: "PUT",
          body: JSON.stringify({
            name,
            username,
            email,
            phone,
            education,
            address,
          }),
          headers: {
            "Content-Type": "application/json",
          },
        });
        const data = await res.json();
      });
    </script>
  </body>
</html>
